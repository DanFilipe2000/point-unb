<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feed - Point UnBersitário</title>
    <style>
        body {
            font-family: 'Rubik', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #005BB5;
            color: #ffffff;
        }

        header {
            text-align: center;
            margin-bottom: 20px;
            background-color: #3b5998;
            padding: 10px;
            color: #ffffff;
        }

        header img {
            width: 50px;
            height: auto;
            border-radius: 50%;
        }

        h1 {
            margin: 10px 0;
            display: inline-block;
        }

        .links {
            float: right;
            text-align: right;
        }

        .links h3 {
            margin: 0;
            padding: 5px;
            font-size: 16px;
            color: #ffffff;
        }

        .links a {
            color: #ffffff;
            text-decoration: none;
            margin-left: 10px;
            font-size: 14px;
        }

        .feed-container {
            max-width: 800px;
            margin: 0 auto;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.2);
            color: #000000;
        }

        form {
            margin-bottom: 20px;
        }

        label {
            font-size: 18px;
            margin-right: 10px;
            color: #000000;
        }

        select {
            padding: 8px;
            font-size: 16px;
        }

        button {
            background-color: #3b5998;
            color: #ffffff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        button:hover {
            background-color: #2d4373;
        }

        .post {
            margin-top: 20px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 20px;
        }

        .post h1 {
            font-size: 24px;
            margin-bottom: 10px;
            color: #005BB5;
        }

        .post img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            margin-bottom: 10px;
        }

        .post p {
            font-size: 16px;
            margin-bottom: 10px;
            color: #000000;
        }
    </style>
</head>
<body>
    <header class="header">
        <h1>Point UnBersitário</h1>
        <div class="links">
            <% if (typeof user !== 'undefined' && user) { %>
                <h3><%= user.name %></h3>
                <a href="/cadastrar-lugar">Criar Post</a>
                <a href="/perfil">Perfil</a>
                <a href="/sair">Sair</a>
            <% } else { %>
                <a href="/">Login</a><br><br>
                <a href="/register">Registro</a>
            <% } %>
        </div>
    </header>
    <div class="feed-container">
        <form action="/filter-feed" method="post">
            <label for="rating"><h2>Filtre pela nota:</h2></label>
            <select id="rating" name="nota">
                <option value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <button type="submit">Filtrar</button>
        </form>
        <a href="/feed">Resetar Filtro</a>
        <% if (typeof lugares !== 'undefined' && lugares) { %>
            <% lugares.forEach(function(item) { %>
            <div class="post">
                <h1><%= item.nome %></h1>
                <img src="<%= '../' + item.foto %>" alt="Descrição da imagem">
                <p>Nota: <%= item.nota %></p>
                <p>Descrição: <%= item.descricao %></p>
            </div>
            <% }); %>
        <% } %>
    </div>
</body>
</html>
