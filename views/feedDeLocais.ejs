<!DOCTYPE html>
<html>
<head>
    <title>Feed de Imagens</title>
    <link rel="stylesheet" href="./public/css/feedDeLocais.css">
    <style>
        p{
            font-size: 26px;
            color: antiquewhite;
        }

        body {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-image: linear-gradient(45deg, rgb(12, 134, 65), rgb(0, 0, 0));

    }

        .header {
            position: fixed;
            top: 0px;
            left: 0px;
            background-color: #003817;
            width: 100%;
            height: 70px;
            display: flex;
            justify-content: space-between;
        }

        .header h1{
            color: rgb(200, 216, 96);
            font-family: "arial";
            font-size: 36px;
        }

        .feed-container {
            margin-top: 70px;
        }
        .links{
            margin-right: 40px;
            
        }
        .links h3{
            font-size: 22px;
            
        }

        .feed-container h1{
            color: aliceblue;
            font-size: 46px;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        }

        .feed-container h2{
            color:aliceblue;
            margin-right: 300px;
        }

        .feed-container img{
            max-width: 770px;
        }

        button{
        background-color: rgb(8, 105, 105);
        border: none;
        border-radius: 10px;
        padding: 10px;
        margin-bottom: 30px;
        
        }
        button:hover{
            background-image: linear-gradient(45deg, rgb(12, 134, 65), rgb(250, 250, 8));
        }

        a{
            margin-top: 20px ;
            color: rgb(255, 255, 255);
            border: none;
            border-radius: 6px;
            padding: 10px;
            margin-bottom: 0px;
            
        }

        a:hover{
            background-color: rgb(10, 87, 58);
        }

        hr{
            width: 100%;
            padding: 1px;
            background-color: aliceblue;
        }
    </style>
</head>
<body>
    <header class="header">
            <img src="https://live.staticflickr.com/65535/53371842705_3f9a06d625_m.jpg" alt="logo point unb">
            <h1>Point UnBersitário</h1>
        <div class="links">
            <% if (typeof user !== 'undefined' && user) { %>
                <h3> <%=user.name%> </h3>
                <a href="/cadastrar-lugar">Criar Post</a>
                <a href="/perfil">Perfil</a>
                <a href="/sair">Sair</a>
            <% } else { %>
                <a href="/">Login</a><br><br>
                <a href="/register">Registro</a>
            <% } %>
        </div>
    </header>
    <div class="feed-container">
        <form action="/filter-feed" method="post">
            <label for="rating"><h2>Filtre pela nota:</h2></label>
            <select id="rating" name="nota">
                <option value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <button type="submit">Filtrar</button>
        </form>
        <% if (typeof lugares !== 'undefined' && lugares) { %>
            <% lugares.forEach(function(item) { %>
                <div class="post">
                <hr>
                    <h1><%= item.nome %></h1>
                    <img src="<%= '../' + item.foto %>" alt="Descrição da imagem">
                    <p>Nota: <%= item.nota %></p>
                    <p>Descrição: <%= item.descricao %></p>
                </hr>
                </div>
            <% }); %>
        <% } %>
    </div>
</body>
</html>
